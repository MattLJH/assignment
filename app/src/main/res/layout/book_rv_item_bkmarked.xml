<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="20dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BBBBBB"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/idRVBookTitle"
            android:layout_width="175dp"
            android:layout_height="41dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/idRVBookImg"
            android:padding="4dp"
            android:text="Book Title"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/idRVAuthor"
            android:layout_width="164dp"
            android:layout_height="27dp"
            android:layout_below="@id/idRVBookTitle"
            android:layout_toEndOf="@id/idRVBookImg"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:padding="3dp"
            android:text="Publisher"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/idRVDate"
            android:layout_width="156dp"
            android:layout_height="25dp"
            android:layout_below="@id/idRVAuthor"
            android:layout_toEndOf="@id/idRVBookImg"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:padding="3dp"
            android:text="Published Date"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/idRVBookImg"
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="Thumbnail" />

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="200dp"
            android:layout_toEndOf="@id/idRVBookTitle"
            android:background="@color/black"
            android:layout_marginLeft="5dp">

            <Button
                android:id="@+id/btnCross"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@null"
                android:drawableLeft="@drawable/cross"
                android:focusable="false"
                android:gravity="center"
                android:minWidth="0dp"
                android:minHeight="0dp" />
        </FrameLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>