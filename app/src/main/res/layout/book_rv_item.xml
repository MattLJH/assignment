<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#BBBBBB"
    android:layout_marginBottom="20dp">

    <LinearLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/idRVBookTitle"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:padding="3dp"
            android:text="Book Title"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/idRVAuthor"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/idRVBookTitle"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:padding="3dp"
            android:text="Publisher"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/idRVDate"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/idRVAuthor"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:padding="3dp"
            android:text="Published Date"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/idRVBookImg"
        android:layout_width="130dp"
        android:layout_height="160dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@id/idRVBookTitle"
        android:contentDescription="Thumbnail" />

    <ToggleButton
        android:id="@+id/btnBookmark"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@drawable/toggle_bkmark"
        android:layout_marginStart="5dp"
        android:checked="false"
        android:clickable="true"
        android:textOff=""
        android:textOn="" />
</LinearLayout>